<div class="container text-center">
<div class="row justify-content-around">
<div class="col-4">
<h2 class="h3 mb-3 font-weight-normal">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "form-signin") do |f| %> 
  <div>
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :password, class: "sr-only"%>
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
  </div>

  <div>
  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
  <% end %>
  </div>

  <div>
    <%= f.submit "Log in",class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
